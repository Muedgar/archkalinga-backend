    .footer {
      padding: 24px;
      text-align: center;
      font-size: 14px;
      background-color: #0f172a;
      color: #94a3b8;
    }

    @media (max-width: 600px) {
      .content, .header, .footer {
        padding: 16px;
      }

      .button {
        display: block;
        width: 100%;
        text-align: center;
      }
    }
